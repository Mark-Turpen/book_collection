<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price ($)</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.date %></td>
        <td><%= link_to('Show', book,method: :get) %></td>
        <td><%= link_to('Edit', edit_book_path(book),method: :get) %></td>
        <td><%= link_to('Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
        <!-- <td><%= link_to('Destroy Page',book, method: :get) %></td> -->
        <!-- <td><a data-method="get" href=/books/<=% %>/destroy>Destroy Page</a></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

